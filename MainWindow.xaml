<Window x:Class="Japanese_Date_Pronunciation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Japanese_Date_Pronunciation"
        xmlns:r="clr-namespace:Japanese_Date_Pronunciation.Resources"
        mc:Ignorable="d"
        Title="Japanese Date Pronunciation" Height="417" Width="590">
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <TextBlock Text="Click 'Start'"
                   TextWrapping="Wrap" VerticalAlignment="Top"
                   Name="QuestionBlock"
                   TextAlignment="Center"
                   Margin="0,0,0,20"
                   FontSize="30"/>
        <Button Name="StartButton" Content="Start"
                Cursor="Hand"
                Click="StartButton_Click"
                FontSize="20"/>
    </StackPanel>
</Window>
